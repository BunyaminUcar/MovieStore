@model List<Movie>


    <h1>Film Listesi</h1>
    <div id="Filmler">

        @foreach (var movie in Model)
        {
            <div class="film">
                <img src="/img/@movie.ImageURL" width="200px" height="300px" alt="@movie.Title" />
                <p>@movie.Title</p>
                <p>@movie.Description</p>
                <p>@movie.Director</p>
                <p>
                    <ul>
                        @foreach (var item in @movie.Players)
                        {
                            <li>@item</li>
                        }
                    </ul>

                </p>

            </div>
        }

        

    </div>

