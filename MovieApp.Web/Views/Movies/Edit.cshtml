@model Movie
<h1>Edit Movie</h1>

<hr />

<form method="post" asp-controller="Movies" asp-action="Edit">
    
    <input type="hidden" name="MovieId" value="@Model.MovieId"/>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" value="@Model.Title" />
        <span asp-validation-for="Title" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    
    <div class="form-group">
        <label asp-for="ImageURL"></label>
        <input asp-for="ImageURL" class="form-control" value="@Model.ImageURL" />
        <span asp-validation-for="ImageURL" class="text-danger"></span>

    </div>
